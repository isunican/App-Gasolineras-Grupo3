<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F2EE">

    <TextView
        android:id="@+id/tvHistoricoRepostajes"
        android:layout_width="331dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="HistÃ³rico de repostajes"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/importeMes" />

    <TextView
        android:id="@+id/tvAcumuladoMes"
        android:layout_width="99dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tvPrecioMedioLitro"
        app:layout_constraintTop_toBottomOf="@+id/tvPrecioMedioLitro"
        tools:text="242" />

    <TextView
        android:id="@+id/importeMes"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="30dp"
        android:text="Importe total del mes:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/precioMedio" />

    <TextView
        android:id="@+id/repostajes"
        android:layout_width="152dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="30dp"
        android:text="Repostajes:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resumenMes" />

    <TextView
        android:id="@+id/tvPrecioMedioLitro"
        android:layout_width="99dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tvRepostajesMes"
        app:layout_constraintTop_toBottomOf="@+id/tvRepostajesMes"
        tools:text="1,534" />

    <TextView
        android:id="@+id/resumenMes"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="88dp"
        android:gravity="start"
        android:text="Este mes "
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRepostajesMes"
        android:layout_width="99dp"
        android:layout_height="35dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="28dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/repostajes"
        app:layout_constraintTop_toBottomOf="@+id/resumenMes"
        tools:text="7" />

    <TextView
        android:id="@+id/precioMedio"
        android:layout_width="204dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="30dp"
        android:text="Precio medio/litro:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repostajes" />

    <ListView
        android:id="@+id/lvRepostajes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvHistoricoRepostajes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="431dp"
        android:layout_height="58dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
